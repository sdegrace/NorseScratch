<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
    </header>
    <div>
        <table>
            <tr>
                <td>{{localize 'norse.injuries.name'}}</td>
                <td>
                    <input name="data.name" type="text" value="{{data.name}}">
                </td>
            </tr>
            <tr>
                <td>{{localize 'norse.injuries.onsetAt'}}</td>
                <td>
                    <input name="data.material" type="text" value="{{data.material}}" data-dtype="Number">
                </td>
            </tr>
            <tr>
                <td>{{localize 'norse.injuries.maxAt'}}</td>
                <td>
                    <input name="data.bloodPercentage" type="text" value="{{data.bloodPercentage}}" data-dtype="Number">
                </td>
            </tr>
            <tr>
                <td>{{localize 'norse.injuries.maxSeverity'}}</td>
                <td>
                    <input name="data.tempDamageAmount" type="text" value="{{data.tempDamageAmount}}" data-dtype="Number">
                </td>
            </tr>
            <tr>
                <td>{{localize 'norse.injuries.value'}}</td>
                <td>
                    <input name="data.permanentDataAmount", type="text" value="{{data.permanentDataAmount}}" data-dtype="Number">
                </td>
            </tr>
            <tr>
                <td>{{localize 'norse.injuries.max'}}</td>
                <td>
                    <input name="data.max", type="text" value="{{data.max}}" data-dtype="Number">
                </td>
            </tr>
        </table>
    </div>
</form>
