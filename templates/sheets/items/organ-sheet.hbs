<form class="{{cssClass}}" autocomplete="off">
    <header class="sheet-header">
        <img src="{{item.img}}" data-edit="img" title="{{item.name}}" height="64" width="64"/>
        <h1><input name="name" type="text" value="{{item.name}}" placeholder="Name"/></h1>
    </header>
    <div>
        <table>
            <tr>
                <td>{{localize 'norse.organs.name'}}</td>
                <td>
                    <input name="data.name" type="text" value="{{data.name}}">
                </td>
            </tr>
            <tr>
                <td>{{localize 'norse.organs.material'}}</td>
                <td>
                    <input name="data.material" type="text" value="{{data.material}}">
                </td>
            </tr>
            <tr>
                <td>{{localize 'norse.organs.bloodPercentage'}}</td>
                <td>
                    <input name="data.bloodPercentage" type="text" value="{{data.bloodPercentage}}" data-dtype="Number">
                </td>
            </tr>
            <tr>
                <td>{{localize 'norse.organs.tempDamageAmount'}}</td>
                <td>
                    <input name="data.tempDamageAmount" type="text" value="{{data.tempDamageAmount}}" data-dtype="Number">
                </td>
            </tr>
            <tr>
                <td>{{localize 'norse.organs.permanentDamageAmount'}}</td>
                <td>
                    <input name="data.permanentDamageAmount" type="text" value="{{data.permanentDamageAmount}}" data-dtype="Number">
                </td>
            </tr>
        </table>
    </div>
</form>
